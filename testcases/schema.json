{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A testcase manifest",
  "properties": {
    "name": {
      "description": "The name of the testcase",
      "type": "string"
    },
    "desc": {
      "description": "A description of the testcase",
      "type": "string"
    },
    "direction": {
      "description": "The direction of the testcase",
      "enum": [
        "afrikaans-to-braille",
        "braille-to-afrikaans"
      ],
      "type": "string"
    },
    "level": {
      "description": "The level of the testcase",
      "type": "string"
    },
    "tags": {
      "description": "The tags of the testcase",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    }
  },
  "required": [
    "name",
    "desc",
    "level",
    "direction",
    "tags"
  ],
  "title": "Testcase",
  "type": "object"
}
